manifest {
    name = 'ref-match-db'
    version = '1.0.0'
    description = 'Reference match database'
    mainScript = 'main.nf'
}

includeConfig 'confs/params.config'
includeConfig 'confs/modules.config'

profiles {
    standard {
        process {
            withLabel: 'process_low' {
                cpus = 4
                memory = '4 GB'
                time = '1h'
            }
        }
    }
    conda {
        conda.enabled = true
        params {
            enable_conda = true
        }
    }
    test {
        includeConfig 'confs/test.config'
    }
}

